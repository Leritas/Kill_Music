<div class="blur" onclick="openNavigation()"></div>

<div class="burger-btn" onclick="openNavigation()">
    <svg>
        <use xlink:href="/main.svg#menu-svg"></use>
    </svg>
</div>

<div class="navigation-menu"> 
    <div onclick="switchScreen(this)">Панель управления</div>
    <div class="scrollbar">
        <div onclick="switchScreen(this)">Заказы</div> 
        <div onclick="switchScreen(this)">Категории</div>
        <div onclick="switchScreen(this)">Товары</div>
        <div onclick="switchScreen(this)">Аккаунты</div>
        <div onclick="switchScreen(this)">Настройка страниц</div>
    </div>
    <div class="exit">
        <svg>
            <use xlink:href="/main.svg#exit-svg"></use>
        </svg>
        <span>Выход</span>
    </div>
</div>
<div class="body">
    <header>
        <a href="/">
            <svg>
                <use xlink:href="/main.svg#logo-svg"></use>
            </svg>
        </a>
        <form>
            <input type="text" name="" id="" placeholder="Search...">
            <button>
                <svg>
                    <use xlink:href="/main.svg#search-svg"></use>
                </svg>
            </button>
        </form>
    </header>

    <div class="main active">
        Главная
    </div>
    <div class="orders">
        <div class="sort-menu">
            <div class="sort-type">
                Состояние
            </div>
            <div class="sort-type">
                Номер
            </div>
            <div class="sort-type">
                Количество
            </div>
            <div class="sort-type">
                Дата
            </div>
            <div class="sort-type">
                Сумма
            </div>
        </div>
        <div class="scroll">
            <div class="order">
                <div class="small" onclick="fullOrderMenu(this)">
                    <svg>
                        <use xlink:href="/main.svg#clock-svg"></use>
                    </svg>
                    <span>202042</span>
                    <span>5</span>
                    <span>29.09.2022</span>
                    <span>100000 ₽</span>
                </div>
                <div class="full">
                    <div class="scroll">
                        <a href="">
                            <div class="item">
                                <img src="/images/items/1.png" alt="">
                                <div class="info-block">
                                    <span>Руль для BMW M5 с подушкой</span><br>
                                    <span class="desc">Мультируль для BMW M5 с блоками управления</span>
                                </div>
                                <div class="price">
                                    <span>100000 ₽</span><br>
                                    <span>x 1</span>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="bottom">
                        <span>Итог: 100000 ₽</span>
                        <div class="btn">
                            <svg>
                                <use xlink:href="/main.svg#clock-svg"></use>
                            </svg>
                            <svg>
                                <use xlink:href="/main.svg#order-svg"></use>
                            </svg>
                            <svg>
                                <use xlink:href="/main.svg#check-svg"></use>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>